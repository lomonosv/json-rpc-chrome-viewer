{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "es6",
    "target": "es6",
    "lib": [
      "es2021",
      "es2021.promise",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/logic/*": ["src/logic/*"],
      "~/components/*": ["src/components/*"]
    },
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ]
}
