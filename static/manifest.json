{
  "name": "JSON RPC Chrome Viewer",
  "version": "1.5.7",
  "description": "JSON RPC requests Chrome developer tools viewer. More convenient way to manage your rpc requests.",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "devtools_page": "index.html",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "content/background.js"
  }
}
